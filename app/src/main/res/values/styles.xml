<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>

        <item name="android:fontFamily">monospace</item>
        <item name="fontFamily">monospace</item>

    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.TabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@drawable/tab_item_selector</item>
    </style>
</resources>
